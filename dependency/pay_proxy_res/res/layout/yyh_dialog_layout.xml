<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="#f9f9f9"
    >
    <LinearLayout
        android:layout_width="@dimen/yyh_dialog_width"
        android:layout_height="wrap_content"
        android:padding="0dip"
        android:layout_margin="0dp"
        android:orientation="vertical" 
        android:background="#f9f9f9"
        >
        <LinearLayout
            android:layout_width="@dimen/yyh_dialog_width"
            android:layout_height="40dip"
            android:orientation="horizontal" 
            android:background="#f9f9f9"
            >

            <TextView
                android:id="@+id/yyh_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyh_tab_selector"
                android:gravity="center_horizontal|center_vertical"
                android:text="登录"
                android:textColor="#303030"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#bfbfbf" />

            <TextView
                android:id="@+id/yyh_regist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/yyh_tab_selector"
                android:gravity="center_horizontal|center_vertical"
                android:text="注册"
                android:textColor="#303030"
                android:textSize="12sp" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/yyh_pagercontainer"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/yyh_dialog_content_height"
            android:background="#f9f9f9"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" />
    </LinearLayout>

</LinearLayout>